{
  "name": "invitelink-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for InviteLink using Playwright and SpecFlow",
  "scripts": {
    "test": "cucumber-js --require-module ts-node/register",
    "test:headed": "PLAYWRIGHT_HEADED=1 cucumber-js --require-module ts-node/register",
    "test:debug": "node --inspect-brk ./node_modules/.bin/cucumber-js --require-module ts-node/register",
    "test:report": "cucumber-js --require-module ts-node/register --format html:reports/test-report.html"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.6"
  }
}
